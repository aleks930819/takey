
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
tab_width = 2
quote_type = single

[**.tsx, **.ts, **.js, **.jsx, **.json, **.yml, **.yaml, **.md]
max_line_length = 120

[*.md]
trim_trailing_whitespace = false
